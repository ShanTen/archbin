#!/usr/bin/env python3

import shutil
import pyfiglet
import random

def choose_font(term_width):
    """
    Choose font size based on terminal width.
    """
    if term_width >= 120:
        fonts = ['slant', 'block']
    elif term_width >= 80:
        fonts = ['standard', 'rounded', 'larry3d']
    else:
        fonts = ['small', 'mini', 'digital']
    return random.choice(fonts)

def main():
    # Get terminal size
    size = shutil.get_terminal_size((80, 20))
    term_width = size.columns

    # Choose font based on width
    font = choose_font(term_width)

    # Generate ASCII banner
    banner = pyfiglet.figlet_format("welcome backs, shan10", font=font)

    print(banner)

if __name__ == "__main__":
    main()
